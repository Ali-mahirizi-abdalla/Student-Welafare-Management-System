# Environment Variables Template for PythonAnywhere Deployment
# Copy this file to .env and fill in your actual values

# Django Settings
SECRET_KEY=your-secret-key-here-change-this-in-production
DEBUG=False
ALLOWED_HOSTS=yourusername.pythonanywhere.com,localhost,127.0.0.1

# Database Configuration
# FOR FREE TIER (SQLite): Set USE_SQLITE=True and ignore DB settings below
USE_SQLITE=True

# FOR PAID TIERS (MySQL): Set USE_SQLITE=False and fill in details below
DB_NAME=yourusername$swms_db
DB_USER=yourusername
DB_PASSWORD=your-database-password
DB_HOST=yourusername.mysql.pythonanywhere-services.com
DB_PORT=3306

# Email Configuration
ADMIN_EMAIL=your-admin-email@example.com
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-email-password

# Google OAuth (Optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# M-Pesa Configuration (Optional)
MPESA_CONSUMER_KEY=
MPESA_CONSUMER_SECRET=
MPESA_PASSKEY=
MPESA_SHORTCODE=174379
MPESA_CALLBACK_URL=https://yourusername.pythonanywhere.com/payment/callback/
